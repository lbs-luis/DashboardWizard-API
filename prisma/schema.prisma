// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OPERATOR
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  role          Role     @default(OPERATOR) // Administrator / Operator
  password_hash String
  created_at    DateTime @default(now())

  managedStores Store[] @relation("ManagedStores")

  operatedStores Store[] @relation("OperatedStores")

  @@map("users")
}

model Store {
  id              String   @id @default(uuid())
  store_custom_id String   @unique
  name            String
  description     String
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now())

  manager_id String
  manager    User   @relation(fields: [manager_id], references: [id], name: "ManagedStores")

  operators User[] @relation("OperatedStores")

  Product Product[]
  Order   Order[]

  @@map("stores")
}

model Product {
  id                String @id @default(uuid())
  product_custom_id String
  bar_code          String

  name           String
  description    String
  price_in_cents Int

  quantity   Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  store    Store  @relation(fields: [store_id], references: [id])
  store_id String

  @@map("products")
}

enum orderStatus {
  InUse
  Available
}

enum orderType {
  Intern
  Personal
}

model Order {
  id              String      @id @default(uuid())
  order_custom_id String
  items           Json
  status          orderStatus @default(Available)
  type            orderType

  store    Store  @relation(fields: [store_id], references: [id])
  store_id String

  @@map("orders")
}
